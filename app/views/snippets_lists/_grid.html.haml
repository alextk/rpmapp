%div.grid{'data-grid-id' => dgc.grid_id}

  -data_grid_toolbar(dgc)

  -data_grid_table(dgc, :urls => {:update_grid => grid_api_snippets_lists_path}) do |t|
    -t.column '', :class => 'bootstrap_dropdown', :width => 60 do |snippets_list|
      %div.btn-group{:style => ''}
        =link_to '#', :class=>'btn dropdown-toggle', 'data-toggle'=>'dropdown' do
          %span.caret
        %ul.dropdown-menu
          %li
            =link_to_fbox edit_snippets_list_path(snippets_list, :origin=>:grid) do
              %i.icon-pencil
              =t('application.edit')
          %li.divider
          %li
            =link_to snippets_list_path(snippets_list, :origin=>:grid), :method => :delete, :remote => true, :confirm => t('application.are_you_sure') do
              %i.icon-remove
              =t('application.delete')
    -t.column Snippet.human_attribute_name(:name), :binding_path => :name, :sortable => true do |snippets_list|
      %div{:class => string_if('ltr', !LocaleUtils.instance.name_in_locale?(snippets_list.name, :locale => 'he-IL'))}
        =link_to snippets_list_path(snippets_list) do
          %div.simple_format=simple_format snippets_list.name
    -t.column Snippet.human_attribute_name(:description), :binding_path => :description, :width => 50 do |snippets_list|
      -if snippets_list.description.present?
        %span.qtipTarget
          =image_tag 'icons/description-32x32.png'
          %div.qtipContents
            %div.markdown=markdown_html snippets_list.description
    -t.column Snippet.human_attribute_name(:purpose), :binding_path => :purpose, :width => 50 do |snippets_list|
      -if snippets_list.purpose.present?
        %span.qtipTarget
          =image_tag 'icons/target_arrow-24x24.png'
          %div.qtipContents
            %div.markdown=markdown_html snippets_list.purpose
    -t.column 'סניפטים' do |snippets_list|
      =snippets_list.snippets.count

  -data_grid_toolbar(dgc, :pos => :bottom)