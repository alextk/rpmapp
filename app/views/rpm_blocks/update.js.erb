<% if @rpm_block.errors.any? %>
  $('div.fbox').replaceWith("<%=escape_javascript render(:template => 'rpm_blocks/edit.fbox') %>");
<% else %>
  var apiDataGrid = $.datagrid.helpers.firstAPI();
  var newTableHtml = $('<%=escape_javascript render('grid', :dgc => AjaxDataGrid::Config.new(:rows => [@rpm_block.reload]), :skip_toolbar => true) %>');
  apiDataGrid.onAjaxUpdateRow('<%= @rpm_block.id %>', newTableHtml);
  $.fancybox.close();
<% end %>

